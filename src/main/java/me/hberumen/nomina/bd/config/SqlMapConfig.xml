<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
  
<configuration>
	<settings>
		<setting name="cacheEnabled" value="false" />
		<setting name="localCacheScope" value="STATEMENT"/>
	</settings> 
	<typeAliases>


		<typeAlias type="me.hberumen.nomina.modelo.Comprobante" alias="ComprobanteDb" />
		<typeAlias type="me.hberumen.nomina.modelo.AccionesOTitulos" alias="AccionesOTitulosDb" />
		<typeAlias type="me.hberumen.nomina.modelo.CompensacionSaldosAFavor" alias="CompensacionSaldosAFavorDb" />
		<typeAlias type="me.hberumen.nomina.modelo.Concepto" alias="ConceptoDb" />
		<typeAlias type="me.hberumen.nomina.modelo.Deduccion" alias="DeduccionDb" />
		<typeAlias type="me.hberumen.nomina.modelo.Deducciones" alias="DeduccionesDb" />
		<typeAlias type="me.hberumen.nomina.modelo.Emisor" alias="EmisorDb" />
		<typeAlias type="me.hberumen.nomina.modelo.EntidadSNFC" alias="EntidadSNFCDb" />
		<typeAlias type="me.hberumen.nomina.modelo.HorasExtra" alias="HorasExtraDb" />
		<typeAlias type="me.hberumen.nomina.modelo.Incapacidad" alias="IncapacidadDb" />
		<typeAlias type="me.hberumen.nomina.modelo.JubilacionPensionRetiro" alias="JubilacionPensionRetiroDb" />
		<typeAlias type="me.hberumen.nomina.modelo.Nomina" alias="NominaDb" />
		<typeAlias type="me.hberumen.nomina.modelo.OtroPago" alias="OtroPagoDb" />
		<typeAlias type="me.hberumen.nomina.modelo.Percepcion" alias="PercepcionDb" />
		<typeAlias type="me.hberumen.nomina.modelo.Percepciones" alias="PercepcionesDb" />
		<typeAlias type="me.hberumen.nomina.modelo.Receptor" alias="ReceptorDb" />
		<typeAlias type="me.hberumen.nomina.modelo.RegimenFiscal" alias="RegimenFiscalDb" />
		<typeAlias type="me.hberumen.nomina.modelo.SeparacionIndemnizacion" alias="SeparacionIndemnizacionDb" />
		<typeAlias type="me.hberumen.nomina.modelo.SubContratacion" alias="SubContratacionDb" />
		<typeAlias type="me.hberumen.nomina.modelo.SubsidioAlEmpleo" alias="SubsidioAlEmpleoDb" />
		
	</typeAliases>
	<environments default="PRODUCCION">
		<environment id="PRODUCCION">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="net.sourceforge.jtds.jdbc.Driver" />
				<property name="url" value="jdbc:mysql://localhost:3306/nomina;" />
				<property name="username" value="root" />
				<property name="password" value="" />
				<property name="poolMaximumActiveConnections" value="1000" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="me/hberumen/nomina/bd/mappers/NominaMapper.xml" />
	</mappers>
</configuration>